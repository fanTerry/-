/* component/follow/articletab/article_tab.wxss */

.article_tab {
  position: relative;
  margin-top: 20rpx;
  padding: 0 20rpx;
  line-height: 1;
  color: #818181;
  background-color: #fff;
}

.dynamic_share {
  margin-left: 76rpx;
  padding-top: 2rpx;
  padding-bottom: 20rpx;
}

.nine_place_img {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  padding-top: 20rpx;
}

.nine_place_img image {
  width: 27.7vw;
  height: 27.7vw;
  margin-bottom: 6rpx;
  border-radius: 16rpx;
}

.nine_place_img image:nth-child(3n) {
  margin-right: 0;
}

.to_someone {
  font-size: 24rpx;
  line-height: 32rpx;
}

.to_someone span {
  padding-right: 8rpx;
  color: #0f87ff;
}

.adver_img, .adver_video {
  width: 100%;
  height: 48vw;
  margin-top: 20rpx;
  border-radius: 16rpx;
}

.adver_title {
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.2;
  padding-top: 20rpx;
  font-size: 26rpx;
}

.dynamic_num {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0 20rpx 74rpx;
  color: #bcbcbc;
  background: -webkit-linear-gradient(top, transparent, transparent 50%, #ddd 50%) 0 top no-repeat;
  background-size: 100% 1px;
}

.dynamic_num .time {
  color: #818181;
}

.dynamic_num .item {
  padding-right: 40rpx;
}

.dynamic_num i {
  display: block;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-right: 4rpx;
}

.dynamic_num div {
  display: flex;
  align-items: center;
}

.dynamic_num .active {
  color: #fea21b;
}

.dynamic_num .active .good_icon {
  background: url('https://rs.esportzoo.com/svn/esport-res/mini/images/home/good_active.png') no-repeat center;
  background-size: cover;
}

.dynamic_num .active .comment_icon {
  background: url('https://rs.esportzoo.com/svn/esport-res/mini/images/home/comment_active.png') no-repeat center;
  background-size: cover;
}

.dynamic_repeat {
  background-color: #efefef;
}
