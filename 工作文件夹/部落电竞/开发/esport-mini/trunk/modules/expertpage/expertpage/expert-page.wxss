.expert-report-trend {
  width: 730rpx;
  margin: 10rpx auto;

  display: grid;
  grid-template-columns: 242rpx 2rpx 242rpx 2rpx 242rpx;
  grid-template-rows: auto 2rpx auto 2rpx;

}
.e-r-box {
  text-align: center;
  background: #fff;
  padding: 15rpx;

  color: #818181;
  font-size: 28rpx;
  line-height: 36rpx;
}
.t1 {
  grid-column: 1 / 2; 
  grid-row: 1 / 4;

  padding-top: 60rpx;
  border-radius:  15rpx 0 0 15rpx;
}
.t2 {
  grid-column: 3 / 4; 
  grid-row: 1 / 2;
}
.t3 {
  grid-column: 5 / 6; 
  grid-row: 1 / 2;
  border-radius:  0 15rpx 0 0;
}
.t4 {
  grid-column: 3 / 4; 
  grid-row: 3 / 4;
}
.t5 {
  grid-column: 5 / 6; 
  grid-row: 3 / 4;
  border-radius:  0 0 15rpx 0;
}
.t-red {
  color: #cd0000;
}



/* 覆盖样式 */
.report-expert-detail {
  padding: 10rpx 10rpx 10rpx 0;
}
/* 覆盖样式 */
.expert-info-title-trend {
  margin: 20rpx auto;
}


.user_card{
	position: relative;
	margin: 40rpx 10rpx 20rpx;
	padding: 0 20rpx 0 40rpx;
	line-height: 1;
	border-radius: 10rpx;
	background: linear-gradient(to right bottom,#fdaa22, #fc8001);
	box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, .5);
}

.user_infor{
	display: flex;
	align-items: center;

	padding: 16rpx 0;
}

.user_infor image{
	width: 94rpx;
	height: 94rpx;
	margin-right: 28rpx;
	border-radius: 50%;
	border: 2rpx solid #fff;
	box-shadow: 0 0 10rpx rgba(0, 0, 0, .5);
}

.user_name{
	font-size: 42rpx;
	color: #fff;
}

.user_name text{
	margin-left: 16rpx;
	padding: 3rpx 30rpx;
	font-size: 20rpx;
	background-color: #ff4557;
	border-radius: 26rpx;
}

.fans{
	padding-top: 26rpx;
	font-size: 20rpx;
	color: #fff;
}

.fans text{
	font-size: 26rpx;
}

.follow,.followed{
	display: flex;
	align-items: center;
	justify-content: center;

	width: 140rpx;
	height: 50rpx;
	font-size: 	26rpx;
	border-radius: 50rpx;

	position: absolute;
	top: 32rpx;
	right: 32rpx;
}

.follow{
	color: #fff;
	background-color: #ff172d;
}

.followed{
	color: #575757;
	background-color: #f5f6f7;
}

.intro_tips{
	padding: 12rpx 0 40rpx;
	font-size: 24rpx;
	line-height: 40rpx;
	color: #fff151;
	border-top: 1rpx solid rgba(255, 255, 255, .5);
}