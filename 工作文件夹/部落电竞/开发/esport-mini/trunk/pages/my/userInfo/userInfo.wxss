.section {
  margin-top: 20rpx;
}

.item {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  height: 88rpx;
  padding: 0 40rpx;
  font-size: 28rpx;
  background-color: #fff;
}

.item image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  object-fit: cover;
}

.item .user_input {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.item > view {
  color: rgba(0, 0, 0, 0.4);
}

.item .link_icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
  font-size: 30rpx;
}

.item .personal_sign {
  max-width: 360rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.2;
}

.login_out {
  display: block;
  margin-top: 16rpx;
  line-height: 96rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  background-color: #fff;
}
