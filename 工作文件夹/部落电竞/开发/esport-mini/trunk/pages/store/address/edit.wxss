/* modules/store/address/edit.wxss */

page{
	height: 100%;
}

.main{
	line-height: 1;
}

.receive_adress{
	padding: 12px 12px 0;
	background-color: #fff;
}

.receive_adress  .title {
  padding: 26rpx 0;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  background: -webkit-linear-gradient(top, transparent, transparent 50%, #eee 50%) 0 bottom no-repeat;
  background-size: 100% 1px;
}

.receive_adress  > view {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #999;
}

.receive_adress  > view::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1px;
  background-color: rgba(0, 0, 0, 0.1);
  transform: scaleY(0.5);
}

.receive_adress input {
  flex: 1;
  -webkit-flex: 1;
}

.receive_adress label {
  width: 188rpx;
}

.receive_adress label, .receive_adress input {
  display: flex;
  align-items: center;
  height: 96rpx;
  font-size: 26rpx;
}

.receive_adress  input, .receive_adress textarea {
  border: none;
  font-size: 26rpx;
  color: #333;
}

picker{
	flex: 1;
	display: flex;
	align-items: center;
	justify-content: flex-end;
}

.location_address {
	font-size: 26rpx;
  flex: 1;
  -webkit-flex: 1;
	color: #333;
}

.location_address .icon-xiangyou{
	font-size: 24rpx;
	color: #333;
}

.location_address span {
  padding-right: 10rpx;
  color: #333;
}

.receive_adress .choose {
  position: relative;
	display: flex;
	align-items: center;
  padding-right: 48rpx;
}

.receive_adress .choose i {
  position: absolute;
  top: 50%;
  transform: rotate(-90deg) translateY(-50%);
	width: 20rpx;
	height: 20rpx;
  right: 0;
}

.receive_adress .choose i::before, .receive_adress .choose i::after {
  content: " ";
  display: inline-block;
  position: absolute;
  left: 50%;
  top: 50%;
  width: 2rpx;
  height: 16rpx;
  background-color: #999;
  -webkit-transform-origin: bottom;
  transform-origin: bottom;
}

.receive_adress .choose i:before {
  transform: translate3d(-50%, -50%, 0) rotate(45deg);
}

.receive_adress .choose i:after {
  transform: translate3d(-50%, -50%, 0) rotate(-45deg);
}

.receive_adress .detail_adress {
  position: relative;
  padding: 30rpx 0;
}

.detail_adress  textarea {
  width: 100%;
  height: 75px;
  line-height: 30rpx;
  padding-left: 128rpx;
}

.detail_adress  span {
  position: absolute;
  left: 0;
  top: 30rpx;
  font-size: 26rpx;
  line-height: 30rpx;
  color: #999;
}

.receive_adress .set_address {
  display: flex;
  align-items: center;
  height: 96rpx;
}

.set_address  span {
  display: flex;
  align-items: center;
}

.set_address  span  i {
  width: 32rpx;
  height: 32rpx;
  margin-right: 14rpx;
  border: 1rpx solid #999;
  border-radius: 50%;
}

.set_address  span .select {
  background: url('https://rs.esportzoo.com/svn/esport-res/mini/images/store/select.png') no-repeat center;
	background-size: cover;
  border: none;
}


.exchange_btn {
	position: absolute;
	bottom: 0;
	left: 50%;
	transform: translateX(-50%);
  align-items: center;
  justify-content: center;
  display: flex ;
  margin: 8rpx auto;
  font-size: 34rpx;
  text-align: center;
  width: 420rpx;
  line-height: 80rpx;
  color: #fff;
  border-radius: 80rpx;
  background: linear-gradient(to right, #ffa200, #ff7b1c);
}

.delete_address {
	display: block;
	margin-top: 16rpx;
	line-height: 96rpx;
	font-size: 28rpx;
	color: #333;
	background-color: #fff;
	text-align: center;
}