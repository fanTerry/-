.mod_header {
  background-color: #fea21b;
}

.main{
	line-height: 1;
}

.header_title {
  position: relative;
  line-height: 88rpx;
  font-size: 38rpx;
  color: #fff;
  font-weight: 500;
  text-align: center;
}

.my_exchange {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 0;
  width: 88rpx;
  height: 88rpx;
  backgruond: url('https://rs.esportzoo.com/svn/esport-res/mini/images/store/user_icon.png');
  background-size: 38rpx;
}

.product_group {
  background-color: #fff;
}

.product_group  .list {
  display: flex;
  flex-wrap: wrap;
  padding-top: 20rpx;
}

.product_group 	.item {
  width: 25%;
  padding-bottom: 24rpx;
  text-align: center;
}

.product_group 	.item	i {
  display: block;
  width: 58rpx;
  height: 58rpx;
  margin: 0 auto 4rpx;
	background-position: center;
	background-repeat: no-repeat;
	background-size: cover;
}

.product_group 	.item   span {
  font-size: 26rpx;
  color: #666;
}

.banner {
  padding-top: 16rpx;
  font-size: 0;
}

.banner image {
  width: 100%;
  height: 240rpx;
}

.goods_list {
  margin-top: 16rpx;
  padding-bottom: 20rpx;
  background-color: #fff;
}

.goods_list	h3 {
  line-height: 70rpx;
  font-size: 26rpx;
  color: #999;
  font-weight: normal;
  text-align: center;
}

.goods_list  .goods_item {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 20rpx 0;
}

.goods_list  .goods_img {
  position: relative;
  width: 50%;
  padding-top: 25%;
  margin-right: 30rpx;
}

.goods_list  .goods_img img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  border-radius: 4rpx;
}

.goods_list  .goods_title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.goods_list  .goods_info {
  flex: 1;
  -webkit-flex: 1;
}

.goods_list  .goods_detail {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 36rpx;
  color: #ccc;
}

.goods_list  .goods_detail 	span {
  display: flex;
  align-items: center;
}

.goods_list  .rank_first, .goods_list  .rank_second, .goods_list  .rank_third {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.goods_list  .tag {
  font-size: 26rpx;
  color: #fea21b;
}

.goods_list  .num {
  padding-right: 10rpx;
}


.tab_list {
	margin-top: 15rpx;
  height: 70rpx;
  line-height: 1;
  padding: 0 6rpx;
  overflow: hidden;
	background-color: #fff;
}

.tab_list .list {
  height: calc(100% + 6px);
  font-size: 0;
  white-space: nowrap;
  overflow-x: scroll;
  -webkit-overflow-scrolling: touch;
}

.tab_list .item {
  display: inline-block;
  margin-right: 25rpx;
  padding: 22rpx 15rpx;
  font-size: 26rpx;
  color: #000;
}

.tab_list .item:last-child {
  margin-right: 0;
}

.tab_list .item:first-child{
	position: relative;
	color: #fea21b;
}

.tab_list .item:first-child::after{
	content: '';
	position: absolute;
	left: 50%;
	bottom: 0;
	transform: translateX(-50%);
 
	width: 46rpx;
	height: 4rpx;
	background-color: #fea21b;
}