/** 根据size格式化传入的对象
 *  @param {string} val 需要格式化的字符串
 *  @param {num} size 保留多少位
 */
exports.subStr = (val, size, suffixStr) => {
    if (!val || val.length == 0 || val == undefined) {
        return;
    }
    var suffix = suffixStr ? suffixStr : '...';
    if (val.length > size) {
        return val.substring(0, size) + suffix;
    } else {
        return val;
    }
};

