/* component/popup/store/exchange.wxss */

.none {
  display: none !important;
}

.ui_pop {
  position: fixed;
  top: 0;
  left: 0;
	z-index: 999;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  background: rgba(0, 0, 0, 0.7);
  /* z-index: 1000; */
} 
 
.close {
  position: absolute;
  right: 16rpx;
  top: 16rpx;
  z-index: 100;
  width: 40rpx;
  height: 40rpx;
  border: 1rpx solid #999;
  border-radius: 50%;
}

.close:before {
  transform: translate3d(-50%, -50%, 0) rotate(45deg);
}

.close::after {
  transform: translate3d(-50%, -50%, 0) rotate(-45deg);
}

.close::before, .close::after {
  position: absolute;
  top: 50%;
  left: 50%;
  content: " ";
  display: inline-block;
  width: 2rpx;
  height: 20rpx;
  background-color: #999;
}

.disabled {
  opacity: 0.2;
}

.exchange_btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 8rpx auto;
  font-size: 34rpx;
  width: 294rpx;
  line-height: 80rpx;
  color: #fff;
  border-radius: 80rpx;
  background: linear-gradient(to right, #ffa200, #ff7b1c);
}

.exchange_quantity, .receive_adress {
	position: relative;
  width: 100%;
  padding: 0 20rpx;
  border-radius: 12rpx 12rpx 0 0;
  background-color: #fff;
  box-sizing: border-box;
}

.exchange_quantity .card {
  position: relative;
  display: flex;
  align-items: center;
  padding-bottom: 30rpx;
  margin-top: -10.6vw;
}

.exchange_quantity .card image {
  width: 45.3vw;
  height: 22.6vw;
  border-radius: 6px;
}

.exchange_quantity .card >view {
  font-size: 32rpx;
  padding-left: 30rpx;
  padding-top: 13vw;
  color: #fea21b;
}

.exchange_quantity .card >view span {
  display: flex;
  align-items: center;
}

.exchange_quantity .card >view p {
  font-size: 24rpx;
  padding-top: 10rpx;
  color: #999;
}

.exchange_quantity .card .star_coin {
  width: 40rpx;
  height: 40rpx;
  margin-right: 6rpx;
  background: url('https://rs.esportzoo.com/svn/esport-res/mini/images/wallet/star_coin.png') no-repeat center;
  background-size: cover;
}

.exchange_quantity  .exchange_num {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0 26rpx;
  font-size: 26rpx;
  color: #666;
}


.exchange_num .data {
  display: flex;
  align-items: center;
}

.exchange_num .data 	span {
  text-align: center;
  background-color: #eee;
}

.exchange_num .reduce, .exchange_num .add {
  position: relative;
  width: 48rpx;
  height: 48rpx;
}

.exchange_num .reduce::after, .exchange_num .add::after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  width: 20rpx;
  height: 2rpx;
  background-color: #999;
}

.exchange_num .add::before {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  height: 20rpx;
  width: 2rpx;
  background-color: #999;
}

.exchange_num .num {
  width: 70rpx;
  height: 48rpx;
  min-height: initial;
  line-height: 48rpx;
  margin: 0 2rpx;
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  border: none;
  text-align: center;
  background-color: #eee;
}

.order_remarks {
  position: relative;
  background: initial !important;
}

.order_remarks  span {
  position: absolute;
  left: 0;
  top: 0;
	display: block;
  font-size: 26rpx;
	line-height: 30rpx;
  color: #333;
}

.order_remarks   .order_need {
	display: flex;
	align-items: flex-start;
	justify-content: flex-start;
  width: 100%;
  font-size: 26rpx;
  height: 75px;
  line-height: 30rpx;
  padding: 0 0 0 128rpx;
}

.receive_adress  .title {
	display: block;
  padding: 26rpx 0;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  background: -webkit-linear-gradient(top, transparent, transparent 50%, #eee 50%) 0 bottom no-repeat;
  background-size: 100% 1px;
}

.receive_adress  > view {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #999;
}

.receive_adress input {
  flex: 1;
  -webkit-flex: 1;
}

.receive_adress label {
  width: 188rpx;
}

.receive_adress label, .receive_adress input {
  display: flex;
  align-items: center;
  height: 96rpx;
  font-size: 26rpx;
}
.receive_adress  input, .receive_adress textarea {
  border: none;
  font-size: 26rpx;
  color: #333;
}

.receive_adress .choose {
  position: relative;
  padding-right: 48rpx;
}

.receive_adress .choose i {
  position: absolute;
  top: 50%;
  transform: rotate(-90deg) translateY(-50%);
  right: 0;
  margin-right: 20rpx;
}

.receive_adress .choose i::before, .receive_adress .choose i::after {
  content: " ";
  display: inline-block;
  position: absolute;
  left: 50%;
  top: 50%;
  width: 2rpx;
  height: 16rpx;
  background-color: #999;
  -webkit-transform-origin: bottom;
  transform-origin: bottom;
}

.receive_adress .choose i:before {
  transform: translate3d(-50%, -50%, 0) rotate(45deg);
}

.receive_adress .choose i:after {
  transform: translate3d(-50%, -50%, 0) rotate(-45deg);
}

.receive_adress .detail_adress {
  position: relative;
  padding: 30rpx 0;
}

.detail_adress  textarea {
  width: 100%;
  height: 75px;
  line-height: 30rpx;
  padding-left: 128rpx;
}

.detail_adress  span {
  position: absolute;
  left: 0;
  top: 30rpx;
  font-size: 26rpx;
  line-height: 30rpx;
  color: #999;
}

.receive_adress .set_address {
  display: flex;
  align-items: center;
  height: 96rpx;
}

.set_address  span {
  display: flex;
  align-items: center;
}

.set_address  span  i {
  width: 32rpx;
  height: 32rpx;
  margin-right: 14rpx;
  border: 1rpx solid #999;
  border-radius: 50%;
}

.set_address  span .select {
  background: url('https://rs.esportzoo.com/svn/esport-res/mini/images/store/select.png') no-repeat center;
  background-size: cover;
  border: none;
}

.location_address {
  flex: 1;
  -webkit-flex: 1;
}

.location_address span {
  padding-right: 10rpx;
  color: #333;
}

.confirm_con {
  display: flex;
  align-items: center;
  justify-content: flex-end !important;
  padding: 8rpx 0;
  font-size: 28rpx;
  color: #333;
}

.confirm_con > view, .confirm_con   .money {
  display: flex;
  align-items: center;
}

.confirm_con   .num {
  font-size: 24rpx;
  color: #999;
}

.confirm_con   .money {
  color: #fea21b;
  font-size: 28rpx;
}

.confirm_con   .confirm_btn {
  margin-left: 24rpx;
  text-align: center;
  width: 190rpx;
  line-height: 80rpx;
  background-color: transparent;
  color: #fff;
  border-radius: 80rpx;
  background: linear-gradient(to right, #ffa200, #ff7b1c);
}

.star_coin {
  width: 20px;
  height: 20px;
  margin-right: 3px;
  background: url('https://rs.esportzoo.com/svn/esport-res/mini/images/wallet/star_coin.png') no-repeat center;
  background-size: cover;
}
.noGoods_tips {
  display: inline-block;
  padding-right: 5rpx;
  color: #FEA21B;
}

/* iphoneX,
iphone Xs max适配 */

@media only screen and (min-device-width: 375px) and (min-device-height: 812px) and (-webkit-device-pixel-ratio: 3),
       only screen and (device-width: 414px) and (device-height: 896px) and (-webkit-device-pixel-ratio: 2) {
  .exchange_quantity, .receive_adress {
    padding-bottom: 68rpx;
    padding-bottom: constant(safe-area-inset-bottom) !important;
    padding-bottom: env(safe-area-inset-bottom) !important;
  }
}
