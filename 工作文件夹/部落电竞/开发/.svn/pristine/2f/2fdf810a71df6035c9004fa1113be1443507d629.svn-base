<script>
import tabs from "./components/tabs";
import Swiper from "swiper";
export default {
  components: {
    tabs
  },
  props: [],
  data() {
    return {
      mark: 0,
      tablist: ["奖励榜单", "活动规则"],
      swiper: Object,
      awardUserInfo: {}
      // firstGiftStatus: {}
    };
  },
  mounted() {
    this.getAwardUserInfo().then(() => {
      this.$nextTick(() => {
        this.initSwiper();
      });
    });
    this.$wxApi.wxRegister({
      title: "一战到底，答题赢大奖",
      desc: "在这里要么暴露智商，要么赢取大奖，你敢来挑战吗？",
      imgUrl:
        "https://rs.esportzoo.com/svn/esport-res/mini/images/icon/hongbao.png",
      link:
        "https://m.esportzoo.com/hd/hd101/home?agentId=10006&biz=1&clientType=7"
    });
  },
  methods: {
    getAwardUserInfo() {
      let param = {};
      param.showUser = false;
      return this.$post("/api/hd101/listUserGift", param)
        .then(rsp => {
          console.log(rsp, param);
          const dataResponse = rsp;
          if (dataResponse.code == 200) {
            this.awardUserInfo = dataResponse.data;
            let str = [];
            this.awardUserInfo.forEach((item, index) => {
              if (item.showType == 0) {
                str[index] = JSON.parse(item.giftProp);
                item.subjectFristPrize = str[index].subjectFristPrize;
              } else {
                str[index] = null;
                item.subjectFristPrize = str[index];
              }
            });
            console.log(this.awardUserInfo);
          }
        })
        .catch(error => {
          console.log(error);
        });
    },
    initSwiper() {
      this.swiper = new Swiper(".swiper-container", {
        loop: true,
        speed: 1000,
        autoplay: true,
        autoplayDisableOnInteraction: false,
        // autoplay: {
        //   enabled: true,
        //   delay: 0,
        //   disableOnInteraction: false
        // },
        slidesPerView: 9,
        direction: "vertical",
        observer: true,
        observeParents: true
      });
    },
    tabChange(index) {
      this.mark = index;
      this.swiper.destroy(false);
      if (this.mark == 0) {
        this.initSwiper();
      }
    }
  }
};
</script>

