/* component/popup/ppmy/pp-my.wxss */
@import "/component/popup/wxss/popup.wxss";

.pp-my-recharge {
  bottom: 50rpx;
}

.pp-m-r-title {
  color: #fff;
}

.m-r-radio-group {
  margin-top: 30rpx;
  border-top: 2rpx solid #ddd;
  border-bottom: 2rpx solid #ddd;
}

.m-r-radio {
  display: block;
  padding: 10rpx 10rpx 10rpx 0;
  margin-left: 20rpx;
  border-bottom: 2rpx solid #ddd;
}

.m-r-radio:last-child {
  border-bottom: none;
}

.my-recharge-btn-text {
  display: inline-block;
  font-size: 26rpx;
  margin: 0 50rpx 0 100rpx;
}

.m-r-b-text {
  color: #aaa;
}

.m-r-b-unit {
  color: #333;
}

.m-r-b-money {
  color: #ffa200;
}

.pp-m-r-btn {
  line-height: 80rpx;
  background: linear-gradient(to right, rgba(255, 162, 0, 1) 0%, rgba(255, 123, 28, 1) 100%);
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99;
  background-color: rgba(0, 0, 0, 0.7);
}

.pop_up {
  width: 680rpx;
  line-height: 1;
  border-radius: 10rpx;
  color: #b7b7b7;
  background-color: #fff;
  position: fixed;
  z-index: 100;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.pop_up .close {
  width: 86rpx;
  line-height: 86rpx;
  font-size: 40rpx;
  text-align: center;
  position: absolute;
  right: 0;
  top: 0;
}

.pop_up .order, .pop_up .discount, .pop_up .balance {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pop_up .order {
  padding: 36rpx 0 28rpx 30rpx;
  font-size: 34rpx;
  color: #000;
  border-bottom: 1rpx solid #ddd;
}

.pop_up .discount {
  margin: 0 30rpx;
  padding: 24rpx 0;
  font-size: 30rpx;
  border-bottom: 1rpx dashed #ddd;
}

.pop_up .discount view {
  display: flex;
  align-items: center;
}

.pop_up .balance {
  margin: 0 30rpx;
  padding: 24rpx 0;
  font-size: 28rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.4);
}

.pop_up .pay_num {
  padding: 20rpx 0 30rpx;
  font-size: 84rpx;
  text-align: center;
  color: #ee322b;
}

.pop_up .pay_num text {
  font-size: 38rpx;
}

.pop_up .pay_method {
  display: flex;
  align-items: center;
  justify-content: left;
  margin: 0 30rpx 20rpx;
  height: 90rpx;
  font-size: 34rpx;
  color: #000;
  border: 2rpx solid #a0a0a0;
  border-radius: 8px;
  position: relative;
}

.pop_up .pay_method image {
  width: 52rpx;
  height: 52rpx;
  margin-right: 10rpx;
  margin-left: 15rpx;
}

.pop_up .pay_method text {
  position: absolute;
  top: 50%;
  right: 24rpx;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #b7b7b7;
}

.att_tisp {
  padding: 8rpx 0 16rpx;
  text-align: center;
}

.pay_title {
  padding-top: 40rpx;
  text-align: center;
  color: #000;
}

.c_red {
  color: #ff444d;
}

.exchange_btn {
  display: block;
  margin: 0 auto 10px;
  font-size: 17px;
  text-align: center;
  width: 147px;
  line-height: 40px;
  color: #fff;
  border-radius: 40px;
  background: linear-gradient(to right, #ffa200, #ff7b1c);
}
