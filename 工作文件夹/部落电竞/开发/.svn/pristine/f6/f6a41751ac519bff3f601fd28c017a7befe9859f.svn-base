<script>
import Vue from "vue";

export default {
  components: {},
  props: ["type", "showType", "qrcodeUrl"],

  data() {
    return {
      prizeDay: [],
      RecordMark: Number,
      showOrderDetails: false,
      rechargeConfirmMark: false,
      qrCodePayMark: false,
      payStatusMark: false,
      payType: Number,
      signGiftList: [] //签到礼品
    };
  },
  methods: {
    closePop() {
      this.$emit("closePop");
    },

    //去签到
    getPrize(index) {
      return this.$post("/api/Sign/signIn")
        .then(rsp => {
          const dataResponse = rsp;
          if (dataResponse.code == 200) {
            console.log("签到");
            this.signGiftList[index].receiveStatus = true;
          } else {
            this.$toast(dataResponse.message);
          }
        })
        .catch(error => {
          console.log(error);
        });
    },
    //弹窗提示
    showMessage(msg) {
      this.$toast(msg);
    },
    guessRecordClick(index) {
      if (this.RecordMark == index) {
        this.RecordMark = -1;
      } else {
        this.RecordMark = index;
      }
    },
    //用户扫码登录
    codeLogin() {
      this.$emit("login");
    },
    rechargePrize(index) {
      this.rechargeConfirmMark = true;
    },
    toQrcodePay() {
      this.rechargeConfirmMark = false;
      this.qrCodePayMark = true;
    }
  }
};
</script>

