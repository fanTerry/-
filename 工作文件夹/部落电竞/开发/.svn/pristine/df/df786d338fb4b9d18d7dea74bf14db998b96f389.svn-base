      console.log("id", id);
      if (this.type == 2) {
        return;
      }
      this.$router.push({
        path: "/helpcenter/feedBackDetail",
        query: { qid: id }
      });
    },
    scrollViewMySend(id) {
      const currel = document.getElementById("sendMessage_" + id);
      if (currel) {
        currel.scrollIntoView({ behavior: "smooth", block: "start" });
      }
    }
  }
};
