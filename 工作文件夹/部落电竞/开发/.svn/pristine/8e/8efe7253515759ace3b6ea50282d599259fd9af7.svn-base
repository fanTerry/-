<script>
export default {
    props:["chargeWayList"],
    data() {
        return {
          choosedChargeWay: -1,
        };
    },
    methods: {
        close(){
          this.$emit("close")
        },
        choose(chargeWay) {
          this.choosedChargeWay = chargeWay;
          console.log(this.choosedChargeWay, "选择的充值方式");
        },
        confirm(){
            if (this.choosedChargeWay == -1) {
              this.$toast("请先选择充值方式");
              return;
            }
            this.$emit("confirmCharge",this.choosedChargeWay)
         }
    },
    components: {}
};
