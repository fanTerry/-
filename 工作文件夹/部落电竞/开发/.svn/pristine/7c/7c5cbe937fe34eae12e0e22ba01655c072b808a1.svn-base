<template>
  <div class="Page follow_Page">
    <header class="mod_header">
      <navBar pageTitle="社区"></navBar>
      <div class="tab">
        <div :class="{'active':currTab==1}">关注</div>
        <div :class="{'active':currTab==2}">话题</div>
      </div>
    </header>

    <div class="main" id='mainId'>
      <section class="mod_follow" v-if="currTab==1&&userFollowTopics">
        <div class="my_follow_topic">
          <h3>我关注的话题<a>更多热门话题<span></span></a></h3>
          <ul>
            <li v-for="(item,index) in userFollowTopics" :key="index">
              <div class="team">
                <img :src="item.imageUrl" alt="">
                <p>{{item.name}}</p>
              </div>
            </li>
          </ul>
        </div>
        <!-- 文章列表组件 -->
        <!-- <articleTab :showType='showType' :cmsContentList='cmsContentList'></articleTab> -->
      </section>
      <noData v-if="noData"> </noData>
      <loading v-if="loading"></loading>
      <!-- </scroll> -->
    </div>
    <a class="release_btn" @click="showPublish=true"></a>
    <div class="ui_pop" :class="{fadeToTop:showPublish}" @click="showPublish=false">
      <div class="tab">
        <div class="active" @click="toPublish(3)">短文</div>
        <div @click="toPublish(5)">视频</div>
      </div>
    </div>
  </div>
</template>
<script>
import navBar from "../../components/header/nav_bar/index";
import topic from "../../components/user_follow/topic";
import Scroll from "components/common/scroll";
import localStorage from "../../libs/storages/localStorage";
import fixScroll from "../../libs/common/fix-scroll-ios";
import navList from "../../components/header/nav_list/index";
import noData from "components/no_data/index";
import loading from "components/common/loading";
import articleTab from "../../components/follow/articleTab";

export default {
  components: {
    navBar,
    topic,
    Scroll,
    navList,
    noData,
    loading,
    articleTab
  },
  data() {
    return {
      currTab: 1,
      userFollowTopics: [],
      showType: 1,
      noData: false,
      loading: false,
      showPublish: false
    };
  },
  created() {
    window.sessionStorage.selectedTab = 1;
  },
  mounted() {
    this.getMyFollowList();
  },
  methods: {
    getMyFollowList() {
      let _self = this;
      _self
        .$post("/api/cmsTopic/listCmsTopic")
        .then(res => {
          if (res.code == "200") {
            console.log(res);
            this.userFollowTopics = res.data.attentionCmsTopicList;
          } else {
            _self.$toast(res.message);
          }
        })
        .catch(error => {
          console.log(error);
        });
    },
    toPublish(type) {
      this.showPublish = false;
      this.$router.push({
        name: "publishEssays",
        query: {
          type: type
        }
      });
    }
  },
  computed: {}
};
</script>


