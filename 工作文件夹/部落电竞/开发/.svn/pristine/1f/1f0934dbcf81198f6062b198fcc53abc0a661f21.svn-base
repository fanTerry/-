/* component/expert/expertheader/expert-header.wxss */

@import "/resources/wxss/layout.wxss";
@import "/resources/wxss/base/display.wxss";
@import "/resources/wxss/base/clear.wxss";
@import "/resources/wxss/iconfont/iconfont.wxss";
@import "/modules/expertpage/wxss/expert-base.wxss";

.expert-info-bg {
  width: 750rpx;
  overflow-x: hidden;
  height: 120rpx;
  padding-top: 50rpx;
  background-color: #0942aa;
}

.expert-info {
  width: 670rpx;
  margin: -110rpx auto 20rpx auto;
  padding: 30rpx;

  background: #6a9afe;
  border-radius: 15rpx;
}
.expert-basic {
  width: 670rpx;
  margin-top: -60rpx;
  padding-bottom: 20rpx;
  /* border-bottom: dashed 2rpx #fff; */
  border-bottom: solid 1rpx #fff;
}
.e-b-c1 {
  width: 170rpx;
}
.e-b-c2 {
  width: 380rpx;
}
.e-b-c3 {
  width: 120rpx;
}

.e-b-f-line {
  padding-top: 35rpx;
}
.expert-avatar {
  width: 135rpx;
  height: 135rpx;

  border-radius: 50%;
  border: solid 5rpx #eee;
}
.expert-name {
  color: #fff;
  font-size: 42rpx;
  font-weight: bold;
}
.expert-num{
  font-size: 30rpx;
  color: #ffea00;
}
.expert-sub {
  color: #0841a8;
  font-size: 24rpx;
  padding: 0 5rpx;
}

.expert-tag {
  display: inline-block;
  padding: 0 20rpx;
  margin-left: 10rpx;

  line-height: 32rpx;
  background: #ff4557;
  border-radius: 20rpx;
  
  font-size: 26rpx;
  font-weight: bold;
  color: #fff;
}



.c_yellow{
	color: #EC9805;
}

.user_card{
	position: relative;
	margin: 40rpx 10rpx 20rpx;
	padding: 0 20rpx 0 40rpx;
	line-height: 1;
	border-radius: 10rpx;
	background: linear-gradient(to right bottom,#fdaa22, #fc8001);
	box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, .5);
}

.user_infor{
	display: flex;
	align-items: center;

	padding: 16rpx 0;
}

.user_infor image{
	width: 94rpx;
	height: 94rpx;
	margin-right: 28rpx;
	border-radius: 50%;
	border: 2rpx solid #fff;
	box-shadow: 0 0 10rpx rgba(0, 0, 0, .5);
}

.user_name{
	font-size: 42rpx;
	color: #fff;
}

.user_name text{
	margin-left: 16rpx;
	padding: 3rpx 30rpx;
	font-size: 20rpx;
	background-color: #ff4557;
	border-radius: 26rpx;
}

.fans{
	padding-top: 26rpx;
	font-size: 20rpx;
	color: #fff;
}

.fans text{
	font-size: 26rpx;
}

.follow,.followed{
	display: flex;
	align-items: center;
	justify-content: center;

	width: 140rpx;
	height: 50rpx;
	font-size: 	26rpx;
	border-radius: 50rpx;

	position: absolute;
	top: 32rpx;
	right: 32rpx;
}

.follow{
	color: #fff;
	background-color: #ff172d;
}

.followed{
	color: #575757;
	background-color: #f5f6f7;
}

.intro_tips{
	padding: 12rpx 0 40rpx;
	font-size: 24rpx;
	line-height: 40rpx;
	color: #fff151;
	border-top: 1rpx solid rgba(255, 255, 255, .5);
}