/* component/reportlist/reportitem/report-item.wxss */

@import "/resources/wxss/layout.wxss";
@import "/resources/wxss/base/clear.wxss";
@import "/resources/wxss/iconfont/iconfont.wxss";
@import "/resources/wxss/base/icon.wxss";

.report-item {
  width: 710rpx;
  height: 100rpx;
  padding: 20rpx 0;
  margin: 0 auto;

  border-top: solid 1rpx #ddd;
}
.r-p-i-r1 {
  width: 100rpx;
  text-align: center;
}
.r-p-i-r2 {
  width: 320rpx;
  padding-left: 40rpx;
}

.r-p-i-r3 {
  width: 100rpx;
}
.r-p-i-r4 {
  width: 140rpx;
  text-align: center;
}

.r-p-i-time {
  /* font-weight: bold; */
  line-height: 50rpx;
}
.r-p-i-title {
  line-height: 50rpx;
  color: #aaa;
}
.r-p-i-d-img {
  float: left;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.r-p-i-d-text {
  display: inline-block;
  width: 200rpx;
  line-height: 50rpx;
  

  text-align: center;
}
.r-p-i-d-score {
  display: inline-block;
  line-height: 50rpx;
  font-size: 24rpx;
}
.r-p-i-d-s-blue {
  color: #fea21b;
}
.r-p-i-d-s-gray {
  color: #aaa;
}
.r-p-i-d-img-gift {
  width: 55rpx;
  height: 55rpx;
  margin-top: 15rpx;
}


.icon-bell-a {
  padding-left: 40rpx;
}
.icon-pic {
  padding-right: 5rpx;
}
.r-p-i-status {
  font-size: 24rpx;
  color: #aaa;
}
.r-p-i-status-text {
  line-height: 50rpx;
}
.r-p-i-i {
  font-size: 24rpx;
}
.r-p-i-s-ing {
  color: #fea21b;
}
.r-p-i-s-over {
  color: #aaa;
}




