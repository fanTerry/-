/* component/newslist/newsimageitem/news-image-item.wxss */

@import "/component/newslist/wxss/news-item.wxss";

.news-image-item {
  display: flex;
	align-items: center;
	justify-content: space-between;
  padding: 20rpx 0;
	font-size: 0;
  border-top: solid 1rpx #ddd;
}

.news-image {
  width: 290rpx;
  height: 180rpx;
  margin-right: 20rpx;
}

.news-paragraph {
	flex: 1;
  height: 180rpx;
}

.news-title {
  height: 120rpx;
  line-height: 40rpx;
  font-size: 26rpx;
}