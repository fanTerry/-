<template>
  <li class="match_item">
    <div class="top">
      <span class="name">{{matchInfo.leagueName}}</span>
      <div v-if="matchInfo.matchStatus==1" class="score">
        <span>{{matchInfo.homeScore}}</span>
        <i class="colon"></i>
        <span>{{matchInfo.awayScore}}</span>
      </div>
      <div class="live" v-if="matchInfo.matchStatus==1">直播中 LIVE</div>
      <span class="tag" v-else>{{matchInfo.startTime|dateFmt('MM-dd hh:mm')}}</span>
    </div>
    <div class="center">
      <div class="team">
        <img :src="matchInfo.homeTeamLogo|getDefaultImg(globalConst.matchTeamDefaultIcon)" alt />
        <p>{{matchInfo.homeTeamName}}</p>
      </div>
      <div class="vs">
        <span>VS</span>
        <p v-if="matchInfo.betUsers">{{matchInfo.betUsers}}人参与</p>
      </div>
      <div class="team">
        <img :src="matchInfo.awayTeamLogo|getDefaultImg(globalConst.matchTeamDefaultIcon)" alt />
        <p>{{matchInfo.awayTeamName}}</p>
      </div>
    </div>
    <div class="bottom">
      <h3>{{matchInfo.quizMathGame.gameNumber|gameFightNum}} {{matchInfo.quizMathGame.subjectName}}</h3>
      <div class="outcome">
        <bet-item :quizMatchGame="matchInfo.quizMathGame" :locationType="locationType" ></bet-item>
      </div>
      <a class="more" :class="{'active':showFlag == currIndex && getBetData.locationType!=1}"
        @click="openMorePlay(matchInfo,matchIndex)">
        更多竞猜
        <span></span>
      </a>
    </div>
  </li>
</template>

<script>
import betItem from "../../../components/guessbet/bet_item.vue";
import { mapGetters, mapActions } from "vuex";
export default {
  components: { betItem },
  props: ["matchIndex", "currIndex", "matchInfo"],
  computed: {
    ...mapGetters({
      getBetData: "getBetData"
    })
  },
  data() {
    return {
      locationType:1,
      showFlag: -1
    };
  },
  computed: {
    ...mapGetters({
      getLoginData: "getLoginData",
      getBetData: "getBetData"
    })
  },
  mounted() {},
  created() {
    this.$bus.$on("betCloseBus", index => {
      console.log("监听事件接受", index);
      //关闭其他的弹出
      if (index == this.showFlag) {
      } else {
        this.showFlag = -1;
      }
    });
  },
  methods: {
    openMorePlay(matchInfo, index) {
      if (!matchInfo.showMoreGame) {
        this.$toast("暂无更多竞猜")
        return
      }
      let matchId = matchInfo.matchId;
      let playNo = matchInfo.quizMathGame.playNo;
      if (this.showFlag != -1) {
        this.showFlag = -1;
        this.$emit("openMore", matchId, index, 1);
        return;
      }

      this.$emit("openMore", matchId, index, playNo);
      this.$bus.$emit("betCloseBus", index);
      this.showFlag = index;
      console.log(this.showFlag);
    }
  }
};
</script>

