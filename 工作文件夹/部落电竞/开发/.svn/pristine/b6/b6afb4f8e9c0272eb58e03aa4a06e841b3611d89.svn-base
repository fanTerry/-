// pages/hd/hd101/home.js
const app = getApp();
var api = require('../../../libs/http.js');
Page({

  /**
   * 页面的初始数据
   */
  data: {
    show: false,
    giftInfo: {},
    subject: {},
    flagNum: 0,
    curType: 0,
    showFlag: false,
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function(options) {
    this.getGift();
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function() {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function() {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function() {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function() {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function() {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function() {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function() {

  },

  getGift() {
    api._postAuth("/subject/home", {
        noShowLoading: true,
        showAuthPage: true,
        returnUrl: api.getCurrentPageUrlWithArgs()
      })
      .then(rsp => {
        console.log(rsp);
        const dataResponse = rsp;
        if (dataResponse.code == "200") {
          // this.giftInfo = dataResponse.data;
          this.setData({
            giftInfo: dataResponse.data
          });
          console.log(this.giftInfo, "返回的消息");
        }
      })
      .catch(error => {
        console.log(error);
      });
  },
  joinHdSubject(e) {
    let apiParam = {};
    apiParam.watchAd = false;
    apiParam.joinType = 0, //初始为0，免费
      console.log(apiParam, "00000一");
    let _self = this;
    _self.setData({
      show: true
    });
    setTimeout(() => {
      _self.setData({
        show: false
      })
    }, 200);
    var url = "/subject/joinSubject";
    api._postAuth(url, apiParam).then(res => {
      const dataResponse = res;
      if (dataResponse.code == "200") {
        let subject = dataResponse.data;
        this.setData({
          subject: dataResponse.data,
        })
        console.log(subject, "开始答题");
        //跳转答题页				
        wx.navigateTo({
          url: '/pages/hd/hd101/answering/answering?hdUserLogId=' + subject.hdUserLogId + "&subjectId=" + subject.subjectId + "&subjectLogId=" + subject.subjectLogId
        })
        //今天没有机会答题了
      } else if (dataResponse.code == "1607") {
        this.setData({
          showFlag: true,
          curType: 4
        })
      } else if (dataResponse.code == "4444") {
        api._showToast("请勿频繁重复点击");
        //看视频获得机会        
      } else if (dataResponse.code == "4111") {
        this.setData({
          showFlag: true,
          curType: 2
        })
        console.log("看视频，再次挑战");
      } else {
        api._showToast("参加答题异常，请稍后再试");
      }

    });

  },

})