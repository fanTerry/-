.mod_header {
  background-color: #fea21b;
}

.header_title {
  position: relative;
  line-height: 88rpx;
  font-size: 38rpx;
  color: #fff;
  font-weight: 500;
  text-align: center;
}

.my_exchange {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 0;
  width: 88rpx;
  height: 88rpx;
  backgruond: url('/resources/images/store/user_icon.png');
  background-size: 38rpx;
}

.product_group {
  background-color: #fff;
}

.product_group  .list {
  display: flex;
  flex-wrap: wrap;
  padding-top: 20rpx;
}

.product_group 	.item {
  width: 25%;
  padding-bottom: 24rpx;
  text-align: center;
}

.product_group 	.item	i {
  display: block;
  width: 58rpx;
  height: 58rpx;
  margin: 0 auto 4rpx;
}

.product_group 	.item   span {
  font-size: 26rpx;
  color: #666;
}

.banner {
  padding-top: 16rpx;
	font-size: 0;
}

.banner image {
  width: 100%;
  height: 240rpx;
}
