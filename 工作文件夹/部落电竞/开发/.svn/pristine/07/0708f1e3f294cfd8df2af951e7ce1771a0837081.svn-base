@import "iconfont.css";
// @import "_base";
@import "_mixin";
@import "_var";
@import "_icon"; 
@import "_animate";

html,body,#app{
    width: 100%; height: 100%; position: fixed;top:0;left:0;
}

// 页面采用弹性盒子布局
.Page{
    @extend .flex;
    flex-direction: column;
    -webkit-flex-direction: column;
    height: 100%;
    background-color: #F4F4F4;
}

// 公用头部栏
.mod_header{
    position: relative;
    background-color: #fff;
}


// 内容主体可滑动区域
.main{
    flex: 1;
    -webkit-flex: 1;
    overflow-x: hidden;
    // -webkit-overflow-scrolling: touch;
}




// 关注按钮
.follow_btn,.followed_btn{
    @extend .flex_v_h;
    width: 60px;
    height: 24px;
    color: $color_main;
    @include getRadiusBorder($color_main,all,24px);
}

.followed_btn{
    color: #AFAFAF;
    @include getRadiusBorder(#AFAFAF,all,24px);
}


// 通用星币图片
.star_coin{
    @include getBgImg('../images/user_center/star_coin.png');
}



// 选择地址插件样式覆盖
.picker .picker-panel .wheel-wrapper .wheel .wheel-scroll .wheel-item {
    line-height: 36px;
    font-size: 16px;
    font-weight: 500;
}
.picker .picker-panel .picker-choose .picker-title {
    line-height: 42px !important;
    font-size: 16px !important;
    font-weight: 500;
    border-bottom: 1px solid #eee;
}
.picker .picker-panel .picker-choose {
    margin: 0 10px;
    height: 42px !important;
}
.picker .picker-panel .picker-choose .cancel,
.picker .picker-panel .picker-choose .confirm {
    top: 50% !important;
    transform: translateY(-50%) !important;
}
.picker .picker-panel .picker-choose .confirm {
    padding: 5px 10px !important;
    border: 1px solid #fea21b;
    border-radius: 3px;
}
.picker .picker-panel {
    border-radius: 8px 8px 0 0;
}

// iphoneX,iphone Xs max适配
@media only screen and (min-device-width: 375px) and (min-device-height: 812px) and (-webkit-device-pixel-ratio: 3),
only screen and (device-width: 414px) and (device-height: 896px) and (-webkit-device-pixel-ratio: 2){
    .mod_header{
        padding-top: constant(safe-area-inset-top) !important;
        padding-top: env(safe-area-inset-top) !important;
    }
    .mod_footer{
        padding-bottom: constant(safe-area-inset-bottom) !important;
        padding-bottom: env(safe-area-inset-bottom) !important;
    }
}