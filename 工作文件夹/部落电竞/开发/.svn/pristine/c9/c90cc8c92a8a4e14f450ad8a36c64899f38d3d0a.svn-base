            <ul>
              <li>
                <div class="team">
                  <img src="https://rs.esportzoo.com/upload/league/team/LoL/1_405.png" alt="">
                  <p>DMOY</p>
                </div>
              </li>
              <li></li>
              <li></li>
              <li></li>
              <li></li>
            </ul>
          </div>
          <!-- 文章列表组件 -->
          <articleTab :showType='showType' :cmsContentList='cmsContentList'></articleTab>
