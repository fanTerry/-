page{
  height: 100%;
}

.Page {
  background-color: rgb(255, 231, 131);
}

.main {
	background: url("https://rs.esportzoo.com/svn/esport-res/mini/images/hd/hd101/answering_bg.png") no-repeat;
  background-size: 100% auto;
  background-position: top center;
}

.count_tips {
  width: 148rpx;
  height: 148rpx;
  line-height: 148rpx;
  border-radius: 50%;
  margin: 36rpx auto 0;
  font-size: 90rpx;
  font-family: "PangMenZhengDao";
  color: #ffe783;
  text-align: center;
  background-color: #e97542;
  box-shadow: 0 10rpx 0 0 rgba(#000000,0.12);
}

.rank_title {
  padding-top: 30rpx;
  font-size: 34rpx;
  color: #fff;
  text-align: center;
}

.rank_title .num {
	padding: 0 10rpx;
	color: #fcff00;
}

.title {
  padding: 75rpx 80rpx 0;
  font-size: 32rpx;
  line-height: 56rpx;
}

.option_group {
  padding-top: 10rpx;
  
}

.option_group > view {
	width: 618rpx;
	margin: 24rpx auto 0;
	padding: 34rpx 0 42rpx 44rpx;
	font-size: 34rpx;
	line-height: 26rpx;
	color: #fff;
	background: url('https://rs.esportzoo.com/svn/esport-res/mini/images/hd/hd101/option_bg.png') no-repeat center;
	background-size: 100% 100%;
}

.option_group > view.active {
	background: url('https://rs.esportzoo.com/svn/esport-res/mini/images/hd/hd101/option_active.png') no-repeat center;
	background-size: 100% 100%;
}

.pop_count_att {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;
  width: 100%;
  height: 100%;
  background: rgb(255, 231, 131);
}

.tips {
  padding-top: 276rpx;
  text-align: center;
}

.tips p {
  display: block;
	padding-top: 20rpx;
	font-size: 36rpx;
	color: #333;
}

.count {
  width: 328rpx;
  margin: 96rpx auto 0;
  border-radius: 50%;
  font-size: 224rpx;
  line-height: 328rpx;
  font-family: "PangMenZhengDao";
  text-align: center;
  color: #ffe783;
  background-color: #e97542;
}