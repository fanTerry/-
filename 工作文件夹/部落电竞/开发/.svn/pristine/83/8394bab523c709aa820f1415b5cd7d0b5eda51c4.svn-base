/* modules/store/detail/goodsDetail.wxss */

.main {
  height: 100%;
	line-height: 1;
  padding-bottom: 200rpx;
}

.goods_list {
  background-color: #fff;
}

.goods_list .goods_image {
  position: relative;
  width: 100%;
  padding-top: 56.5%;
}

.goods_list .goods_image 	image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.goods_list  .goods_title {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.goods_list  .goods_grade {
  position: relative;
  margin-left: 8rpx;
  padding: 6rpx 10rpx;
  font-size: 22rpx;
	line-height: 1;
  color: #fea21b;
}

.goods_list .goods_grade:before {
  content: "";
  pointer-events: none;
  box-sizing: border-box;
  position: absolute;
  width: 200%;
  height: 200%;
  left: 0;
  top: 0;
  border-radius: 8rpx;
  border: 1rpx solid #fea21b;
  -webkit-transform: scale(0.5);
  -webkit-transform-origin: 0 0;
  transform: scale(0.5);
  transform-origin: 0 0;
}

.goods_list  .goods_detail {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  color: #ccc;
}

.goods_list  .goods_detail	span,.goods_list  .goods_detail	p, .goods_list  .goods_detail  view {
  display: flex;
  align-items: center;
}

.goods_list  .goods_detail  .bought_person {
  padding-right: 8rpx;
}

.goods_list  .goods_detail  image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 8rpx;
  border-radius: 50%;
  object-fit: cover;
}

.goods_list .discount_price{
	padding-left: 10rpx;
	font-size: 20rpx;
	color: #999;
	text-decoration: line-through;
}

.goods_list  .num {
  padding-right: 10rpx;
}

.goods_list  .star_coin {
  display: block;
  width: 28rpx;
  height: 28rpx;
  margin-right: 6rpx;
  background: url('https://rs.esportzoo.com/svn/esport-res/mini/images/wallet/star_coin.png') no-repeat center;
  background-size: cover;
}

.goods_list  .mark {
  color: #fea21b;
  font-size: 28rpx;
}

.goods_info {
  margin-top: 16rpx;
  padding: 0 20rpx;
}

.goods_info  h3 {
	display: block;
  padding-top: 30rpx;
  font-size: 32rpx;
  color: #333;
}

.goods_info  p {
	display: block;
  padding-top: 20rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  color: #333;
}

.goods_info  image {
  margin-top: 8rpx;
  width: 100%;
}

.mod_footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
}

.goods_exchange {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8rpx 20rpx;
  text-align: center;
  color: #666;
  box-shadow: 0 1px 2px #000;
}

.goods_exchange .service_icon {
  display: block;
  width: 48rpx;
  height: 48rpx;
  margin: 0 auto;
  background: url('https://rs.esportzoo.com/svn/esport-res/mini/images/store/service_icon.png') no-repeat center;
  background-size: 24px;
}

.goods_exchange .exchange_btn {
  font-size: 34rpx;
  width: 294rpx;
  line-height: 80rpx;
  color: #fff;
  text-align: center;
  border-radius: 80rpx;
  background: linear-gradient(to right, #ffa200, #ff7b1c);
}


.goods_discount,
.goods_new,
.goods_recommend,
.no_goods {
  display: block;
  width: 100rpx;
  height: 32rpx;
  margin-left: 20rpx;
  padding-right: 16rpx;
  font-size: 22rpx;
  line-height: 32rpx;
  text-align: right;
  color: #fff;
}

.no_goods {
  text-align: center;
  padding: 0;
  border-radius: 16rpx;
  background: linear-gradient(to right, #ff7e36, #fe541b);
  background: -webkit-linear-gradient(to right, #ff7e36, #fe541b);
}

.goods_discount {
	background: url('https://rs.esportzoo.com/svn/esport-res/mini/images/store/goods_discount.png') no-repeat center;
  background-size: cover;
}
.goods_new {
	background: url('https://rs.esportzoo.com/svn/esport-res/mini/images/store/goods_new.png') no-repeat center;
  background-size: cover;
}
.goods_recommend {
	background: url('https://rs.esportzoo.com/svn/esport-res/mini/images/store/goods_recommend.png') no-repeat center;
  background-size: cover;
}
/**详情页表格样式处理*/
.wxParse-table {
	text-indent: 0;
}

.wxParse-tr {
  flex:1;
	font-size: 24rpx;
	border-left: 1rpx solid rgba(0, 0, 0, .3);
}

.wxParse-tr:first-child{
	border: none;
}

.wxParse-th {
	width: 20%;
	flex: 1;
	background: #aaa;
  color: #fff;
}

.wxParse-td {
	width: 20%;
    flex: 1;
		border-width:0 1rpx 1rpx 0;
		border-style: solid;
		border-color: rgba(0, 0, 0, .3);
}

.wxParse-td,.wxParse-th,.wxParse-tr{
	display: flex;
	align-items: center;
	justify-content: center;
	line-height: 60rpx;
}

.wxParse-tr .WxEmojiView{
	width: 100%;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	text-align: center; 
}