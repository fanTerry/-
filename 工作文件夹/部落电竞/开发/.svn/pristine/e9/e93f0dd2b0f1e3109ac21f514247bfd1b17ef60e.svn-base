<script>
import tabs from "./components/tabs";
import Swiper from "swiper";

export default {
  components: {
    tabs
  },
  props: [],
  data() {
    return {
      mark: 0,
      tablist: ["奖励榜单", "活动规则"],
      swiper: Object,
      awardUserInfo: {},
      firstGiftStatus: {}
    };
  },
  mounted() {
    this.getAwardUserInfo().then(() => {
      this.$nextTick(() => {
        this.initSwiper();
      });
    });
  },
  methods: {
    getAwardUserInfo() {
      let param = {};
      param.showUser = false;
      param.hdId = 2;
      return this.$post("/api/hd101/listUserGift", param)
        .then(rsp => {
          console.log(rsp, param);
          const dataResponse = rsp;
          if (dataResponse.code == 200) {
            this.awardUserInfo = dataResponse.data;
            this.firstGiftStatus = JSON.parse(
              this.answerRecord.hdUserGift.giftProp
            );
          }
        })
        .catch(error => {
          console.log(error);
        });
    },
    initSwiper() {
      this.swiper = new Swiper(".swiper-container", {
        loop: true,
        speed: 1000,
        autoplay: {
          enabled: true,
          delay: 0,
          disableOnInteraction: false
        },
        slidesPerView: 9,
        direction: "vertical",
        observer: true,
        observeParents: true
      });
    },
    tabChange(index) {
      this.mark = index;
      this.swiper.destroy();
      if (this.mark == 0) {
        this.initSwiper();
      }
    }
  }
};
</script>

