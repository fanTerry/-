/* pages/follow/follow.wxss */
@import "/resources/wxss/iconfont/iconfont.wxss";

.icon-tianxie {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 20rpx;
  font-size: 40rpx;
  color: #818181;
}

.main {
  position: relative;
	flex: 1;
  border-radius: 16rpx;
	line-height: 1;
}

.myfollow_tab, .article_tab {
	display: block;
  padding: 0 10rpx;
}

.search_result {
  position: relative;
}

.search_result .user_info:last-child:after {
  content: "";
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0;
  width: 80%;
  height: 1rpx;
  background-color: #ddd;
}

.user_list, .search_result {
  padding-left: 20rpx;
  background-color: #fff;
  border-radius: 16rpx 16rpx 0 0;
}

.user_list {
  border-radius: 0 0 16rpx 16rpx;
}

.search_con {
  position: relative;
  display: flex;
  margin: 0 90rpx 14rpx;
}

.search_con input {
  flex: 1;
  height: 48rpx;
  padding-left: 60rpx;
  border-radius: 48rpx;
  background-color: #fff;
  border: none;
}

.search_con .search {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 14rpx;
  width: 32rpx;
  height: 32rpx;
  background: url('https://rs.esportzoo.com/svn/esport-res/mini/images/home/search.png') no-repeat center;
  background-size: cover;
}

.article_tab {
  position: relative;
  margin: 16rpx 10rpx 0;
  line-height: 1;
  border-radius: 16rpx;
  color: #818181;
  background-color: #fff;
}

.dynamic_share {
  margin-top: 8rpx;
  margin-left: 76rpx;
  padding-top: 2rpx;
	padding-bottom: 20rpx;
}

.nine_place_img {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  padding-top: 20rpx;
}

.nine_place_img image {
  width: 27.7vw;
  height: 27.7vw;
  margin-bottom: 6rpx;
  object-fit: cover;
  border-radius: 16rpx;
}

.nine_place_img image :nth-child(3n) {
  margin-right: 0;
}

.to_someone {
  padding-top: 6rpx;
  font-size: 24rpx;
}

.to_someone span {
  padding-right: 8rpx;
  color: #0f87ff;
}

.adver_img, .adver_video {
  width: 100%;
  height: 48vw;
  object-fit: cover;
  margin-top: 20rpx;
  border-radius: 16rpx;
}

.adver_video {
  margin-top: 10rpx;
}

.adver_title {
	display: block;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.2;
  padding-top: 20rpx;
  font-size: 26rpx;
}

.dynamic_num {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0 20rpx 74rpx;
  color: #bcbcbc;
  border-top: 1rpx solid #ddd;
}

.dynamic_num .time {
  color: #818181;
}

.dynamic_num .item {
  padding-left: 40rpx;
}

.dynamic_num i {
  display: block;
  width: 30rpx;
  height: 28rpx;
	font-size: 24rpx;
  line-height: 30rpx;
  margin-right: 4rpx;
}

.dynamic_num view {
  display: flex;
  align-items: center;
}

.dynamic_num .active {
  color: #fea21b;
}
.good_icon {
  background: url('https://rs.esportzoo.com/svn/esport-res/mini/images/home/good_icon.png') no-repeat center;
  background-size: cover;
}
.comment_icon {
  background: url('https://rs.esportzoo.com/svn/esport-res/mini/images/home/comment_icon.png') no-repeat center;
  background-size: cover;
}

.dynamic_num .active .good_icon {
  background: url('https://rs.esportzoo.com/svn/esport-res/mini/images/home/good_active.png') no-repeat center;
  background-size: cover;
}

.dynamic_num .active .comment_icon {
  background: url('https://rs.esportzoo.com/svn/esport-res/mini/images/home/comment_active.png') no-repeat center;
  background-size: cover;
}

.dynamic_repeat {
  background-color: #efefef;
}

.sidebar {
  position: fixed;
  bottom: 190rpx;
  right: 30rpx;
  color: #c2c2c2;
  text-align: center;
}

.sidebar .icon-sousuo {
  font-size: 24rpx;
  color: currentColor;
}

.sidebar a {
  display: block;
  padding-top: 16rpx;
  color: currentColor;
}

.no_data{
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%,-50%);
}