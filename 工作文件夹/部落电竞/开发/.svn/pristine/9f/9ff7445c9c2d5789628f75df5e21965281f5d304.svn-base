<template>
  <div class="Page">
    <header class="mod_header header_nav_list">
      <!-- <userHeader :num="isIf"></userHeader> -->
      <navList :dataList="channelList" @changeTab="relodDataByTab"></navList>
    </header>
    <div class="main">
      <div class="scroll-list-wrap">
        <scroll
          ref="scroll"
          :scrollbar="scrollbar"
          :pullDownRefresh="pullDownRefresh"
          :pullUpLoad="pullUpLoad"
          :startY="0"
          @pullingDown="onPullingDown"
          @pullingUp="onPullingUp"
        >
          <div class="scroll_wrapper">
            <banner ref="banner" v-if="contentType==1" :adList="adList"></banner>

            <section class="infor_list">
              <template v-for="item in newsList">
                <article class="item" v-if="item.type==1" @click="toCmsDetail(item.aricleId)">
                  <div>
                    <img class="item_img" v-if="item.type==1" :src="item.imageSrc" alt />
                    <img class="item_img" v-if="item.type==2" :src="item.titleImg" alt />
                  </div>
                  <div class="item_right">
                    <div>
                      <p class="item_title">
                        <span>#{{item.tag}}</span>
                        <span>{{item.publishTimeStr}}</span>
                      </p>
                      <p class="txt">{{item.detail}}</p>
                    </div>
                    <div class="visited">
                      <p>
                        <i class="iconfont icon-icon_yulan"></i>
                        <span>{{item.seeNum}}</span>
                      </p>
                      <p>
                        <i class="iconfont icon-pinglun"></i>
                        <span>{{item.discussNum}}</span>
                      </p>
                    </div>
                  </div>
                </article>

                <article class="item" v-else-if="item.type==2" :class="'video-'+item.aricleId">
                  <div class="film_con">
                    <video
                      :class="'video-'+item.aricleId"
                      @click="playVideo($event,item.aricleId)"
                      :src="item.imageSrc"
                      controls
                    ></video>
                    <div class="film_title">{{item.detail}}</div>
                    <div class="flex_v_justify">
                      <span>#{{item.tag}}</span>
                      <div class="visited">
                        <p>
                          <i class="iconfont icon-icon_yulan"></i>
                          <span>{{item.seeNum}}</span>
                        </p>
                        <p>
                          <i class="iconfont icon-pinglun"></i>
                          <span>{{item.discussNum}}</span>
                        </p>
                      </div>
                    </div>
                  </div>
                </article>
              </template>
            </section>
          </div>
        </scroll>
      </div>
    </div>
    <footer class="mod_footer">
      <tabbar></tabbar>
    </footer>
    <loading v-show="isShowLoad"></loading>
  </div>
</template>

<script>
import tabbar from "../../components/tabbar/index";
import navList from "../../components/header/nav_list/index";
import userHeader from "../../components/header/user_header/index";
import banner from "../../components/header/banner/index";
import Scroll from "components/common/scroll";
import loading from "components/common/loading";

export default {
  data() {
    return {
      isIf: true,
      scrollbar: { fade: true },
      pullDownRefresh: { threshold: 90, stop: 40, txt: "刷新成功" },
      pullUpLoad: {
        threshold: 10,
        txt: { more: "加载更多", noMore: "没有更多数据了" }
      },
      index: 1,
      turnToPrev: false,
      turnToNext: false,

      pageNo: 1,
      pageSize: 10,
      currPageSize: 10,
      newsList: [],
      noDataFlag: false,
      canShowVideo: false,
      requestMore: false,
      contentType: 1,
      adList: [],
      channelList: [],
      isShowLoad: false,

      currVideo: 0
    };
  },
  mounted() {
    $(".loading_wrapper").hide();
    this.getPageData();
    this.setHeader();
  },
  methods: {
    onPullingDown() {
      console.log("you are onPullingDown");
      if (this._isDestroyed) {
        return;
      }
      this.refresh(true);
    },
    onPullingUp() {
      console.log("you are onPullingUp");
      if (this._isDestroyed) {
        return;
      }
      
      if (this.currPageSize < this.pageSize) {
        this.$refs.scroll.forceUpdate();
      } else {
        this.loadMore();
      }
    },
    refresh(loaded) {
      console.log("you are refresh");
      this.setHeader();
      this.getPageData().then(()=>{
        this.$refs.scroll.forceUpdate();
      });;
    },
    loadMore() {
      console.log("you are loadMore");
      let param = {};
      param.pageNo = this.pageNo + 1;
      param.pageSize = this.pageSize;
      param.contentType = this.contentType;
      this.getPageData(param).then(()=>{
        this.$refs.scroll.forceUpdate();
      });
    },

    /**获取菜单栏 */
    setHeader() {
      let param = {};
      param.contentType = this.contentType;
      console.log("切换tab", param);
      this.$post("/api/indexData", param)
        .then(rsp => {
          console.log(rsp);
          const dataResponse = rsp;
          if ((dataResponse.code = "200")) {
            console.log("setHeader---请求成功");
            this.adList = dataResponse.data.adList;
            this.slideText = this.adList[0].title;
            this.channelList = dataResponse.data.channelList;
            console.log("channelList", this.channelList);
            this.$nextTick(() => {
              this.$refs.banner.update("更新");
            });
          }
        })
        .catch(error => {
          console.log(error);
        });
    },

    /**获取分页资讯数据 */
    getPageData(param) {
      if (!param) {
        param = {};
        param.pageNo = 1;
        param.pageSize = 10;
        param.contentType = this.contentType;
      }
      console.log("分页参数", param);
      return this.$post("/api/newlist", param)
        .then(rsp => {
          const dataResponse = rsp;
          if ((dataResponse.code = "200")) {
            console.log(dataResponse.data, "getPageData---请求成功");
            this.currPageSize = dataResponse.data.length;
            if (dataResponse.data.length > 0) {
              this.newsList = this.newsList.concat(dataResponse.data);
            }
            return this.newsList
          }
        })
        .catch(error => {
          console.log(error);
        });
    },

    /**切换tab数据 */
    relodDataByTab(tabId) {
      console.log("tabId---", tabId);
      this.contentType = tabId;
      this.isShowLoad = true;
      let param = {};
      param.pageNo = 1;
      param.pageSize = 10;
      param.contentType = this.contentType;
      this.newsList = [];
      this.currPageSize = 10;
      this.getPageData(param).then(res => {
        this.isShowLoad = false;
      });
    },

    /** 跳转详情页 */
    toCmsDetail(id) {
      this.$router.push({
        name: "homeDetail",
        params: {
          id: id
        }
      });
    },
    /**视频点击播放 */
    playVideo(event, id) {
      let video = event.currentTarget;
      if (video.paused) {
        // console.log("播放-",id);
        video.play();
        if (this.currVideo === 0) {
          this.currVideo = id;
        } else {
          /**暂停上一个视频 */
          //  console.log("暂停上一个视频",this.currVideo);
          document.querySelector(".video-" + this.currVideo).pause();
          this.currVideo = id;
        }
      } else {
        // console.log("暂停",id);
        video.pause();
      }
    }
  },
  components: {
    tabbar,
    userHeader,
    navList,
    banner,
    Scroll,
    loading,
    banner
  }
};
</script>

