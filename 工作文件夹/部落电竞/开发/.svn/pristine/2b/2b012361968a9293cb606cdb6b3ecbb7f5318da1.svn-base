/* modules/expertpage/expertdetailpage/expert-detail-page.wxss */
@import "/resources/wxss/layout.wxss";
@import "/resources/wxss/base/display.wxss";
@import "/resources/wxss/base/clear.wxss";
@import "/resources/wxss/iconfont/iconfont.wxss";

@import "/modules/expertpage/wxss/expert-comm.wxss";
@import "/modules/expertpage/wxss/expert-paragraph.wxss";
@import "/component/reportlist/reportexpertitem/report-expert-item.wxss";

.expert-pop-pay {
  width: 750rpx;
}

.expert-pop-pay-info {
  width: 730rpx;
  padding: 10rpx 0;
  margin: 0 auto;

  background: #fff;
  border-radius: 15rpx;

  font-size: 26rpx;
}
.e-p-p-gray {
  padding-left: 40rpx;
  color: #a3a3a3;
}
.e-p-p-data {
  width: 500rpx;
  text-align: right;
}
.e-p-p-num {
  color: #ec9805;
}

.expert-pop-pay-agree {
  text-align: center;
}
.e-p-p-label {
  font-size: 24rpx;
  color: #666;
}
.e-p-p-deal {
  color: #679dfa;
}
.e-p-p-checkbox {
  width: 20rpx;
  height: 20rpx;
  border-radius: 20rpx;
}
.expert-pop-pay-btn {
  width: 750rpx;
  height: 100rpx;
  background: #fff;
  margin-top: 20rpx;
  overflow: hidden;
}
.expert-pop-blank {
  width: 750rpx;
  height: 200rpx;
  margin: 0 auto;
  overflow: hidden;
}
.e-p-p-c1 {
  width: 400rpx;
  text-align: right;
  font-size: 28rpx;
  color: #cecece;
}
.e-p-p-b-num {
  color: #ec9805;
}
.e-p-p-b-coin {
  color: #333333;
}
.e-p-p-btn {
  display: inline-block;
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;

  font-size: 40rpx;
  color: #fff;
  background: #ff8607;
  border-radius: 40rpx;
}

.expert-detail-paragraph {
  width: 710rpx;
  padding: 10rpx;
  margin: 10rpx auto;

  background: #fff;
  border-radius: 15rpx;
}


/* expert-recommend-view */
.expert-recommend-view {
  width: 710rpx;
  padding: 15rpx 10rpx 40rpx 10rpx;
  margin: 10rpx auto;

  background: #fff;
  border-radius: 15rpx;
}

.expert-recommend {
  width: 710rpx;
  padding: 20rpx 0;

  background: #fea21b;
  border-radius: 15rpx;
}

.e-r-c1 {
  width: 250rpx;
  text-align: center;
}
.e-r-detail {
  font-size: 26rpx;
  color: #fff;
  text-align: center;
  line-height: 30rpx;
}
.e-r-name {
  font-weight: bold;
  line-height: 50rpx;
}
.e-r-n-text {
  font-size: 44rpx;
}
.e-r-vs {
  font-size: 32rpx;
  padding: 0 40rpx;
}
.e-r-time {
  padding: 0 5rpx;
}

.report-info-img {
  display: inline-block;
  vertical-align: middle;

  width: 130rpx;
  height: 130rpx;
}

/**详情页表格样式处理*/
.wxParse-table {
	text-indent: 0;
}

.wxParse-tr {
  flex:1;
	font-size: 24rpx;
	border-left: 1rpx solid rgba(0, 0, 0, .3);
}

.wxParse-tr:first-child{
	border: none;
}

.wxParse-th {
	width: 20%;
	flex: 1;
	background: #aaa;
  color: #fff;
}

.wxParse-td {
	width: 20%;
    flex: 1;
		border-width:0 1rpx 1rpx 0;
		border-style: solid;
		border-color: rgba(0, 0, 0, .3);
}


.wxParse-td,.wxParse-th,.wxParse-tr{
	display: flex;
	align-items: center;
	justify-content: center;
	line-height: 60rpx;
  	text-align: center;
}

.WxEmojiView{
	width: 100%;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	/* text-align: center; */
}