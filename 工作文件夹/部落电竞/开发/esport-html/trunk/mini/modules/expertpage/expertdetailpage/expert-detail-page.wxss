.expert-pop-pay {
  width: 750rpx;
}

.expert-pop-pay-info {
  width: 730rpx;
  padding: 10rpx 0;
  margin: 0 auto;

  background: #fff;
  border-radius: 15rpx;

  font-size: 26rpx;
}
.e-p-p-gray {
  padding-left: 40rpx;
  color: #a3a3a3;
}
.e-p-p-data {
  width: 500rpx;
  text-align: right;
}
.e-p-p-num {
  color: #ec9805;
}

.expert-pop-pay-agree {
  text-align: center;
}
.e-p-p-label {
  font-size: 24rpx;
  color: #666;
}
.e-p-p-deal {
  color: #679dfa;
}
.e-p-p-checkbox {
  width: 20rpx;
  height: 20rpx;
  border-radius: 20rpx;
}
.expert-pop-pay-btn {
  width: 750rpx;
  height: 100rpx;
  background: #fff;
  margin-top: 20rpx;
  overflow: hidden;
}
.expert-pop-blank {
  width: 750rpx;
  height: 200rpx;
  margin: 0 auto;
  overflow: hidden;
}
.e-p-p-c1 {
  width: 400rpx;
  text-align: right;
  font-size: 28rpx;
  color: #cecece;
}
.e-p-p-b-num {
  color: #ec9805;
}
.e-p-p-b-coin {
  color: #333333;
}
.e-p-p-btn {
  display: inline-block;
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;

  font-size: 40rpx;
  color: #fff;
  background: #ff8607;
  border-radius: 40rpx;
}

.expert-detail-paragraph {
  width: 710rpx;
  padding: 10rpx;
  margin: 10rpx auto;

  background: #fff;
  border-radius: 15rpx;
}